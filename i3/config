set $mod Mod4

# fonts
font pango:monospace 8
font pango:Source Code Pro 8
font pango:Hack 10
font pango:FontAwesome 9

# set cpu performance mode
exec --no-startup-id echo "performance" | sudo tee /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor

# refresh i3status
set $refresh_i3status killall -SIGUSR1 i3status

# set keyboard layout
exec --no-startup-id setxkbmap dvorak

# refresh compton
exec --no-startup-id compton

# notifications daemon
exec --no-startup-id dunst

# refresh wallpaper
exec_always nitrogen --restore

# network manager tray gui
exec --no-startup-id nm-applet

# night light
exec --no-startup-id nightshift -l -20:-50

# h t n s keybinds
set $left h
set $down t
set $up n
set $right s

# floating window movement
floating_modifier $mod

# spotify
bindsym $mod+Up exec dbus-send --no-startup-id --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym $mod+Left exec dbus-send --no-startup-id --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
bindsym $mod+Right exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

# terminal
bindsym $mod+Return exec alacritty

# screenshot
bindsym Print exec --no-startup-id i3-scrot

# kill window
bindsym $mod+c kill

# start rofi
bindsym $mod+d exec --no-startup-id dmenu_run

# focus with h t n s
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move with h t n s
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# split horizontal
bindsym $mod+g split h

# split vertical
bindsym $mod+l split v

# fullscreen
bindsym $mod+f fullscreen toggle

# layout
bindsym $mod+k layout stacking
bindsym $mod+j layout tabbed
bindsym $mod+q layout toggle split

# toggle floating / tiling
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# focus parent
bindsym $mod+a focus parent

# move to scratchpad
bindsym $mod+Shift+minus move scratchpad

# toggle scratchpad windows
bindsym $mod+minus scratchpad show

# border
default_border pixel 3

# gaps
gaps inner 3
gaps outer 3

# workspaces
set $ws1  "1: "
set $ws2  "2: "
set $ws3  "3: "
set $ws4  "4: "
set $ws5  "5: "

# go to workspace
bindsym $mod+6 workspace $ws1
bindsym $mod+7 workspace $ws2
bindsym $mod+8 workspace $ws3
bindsym $mod+9 workspace $ws4
bindsym $mod+0 workspace $ws5

# move to workspace
bindsym $mod+Shift+6 move container to workspace $ws1
bindsym $mod+Shift+7 move container to workspace $ws2
bindsym $mod+Shift+8 move container to workspace $ws3
bindsym $mod+Shift+9 move container to workspace $ws4
bindsym $mod+Shift+0 move container to workspace $ws5

# reload
bindsym $mod+Shift+c reload

# restart
bindsym $mod+Shift+r restart

# exit
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize
mode "resize"
{
        # shrink / grow width with h t n s
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        
        # shrink / grow height with h t n s
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt
        
        # normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# colours
# Taken from
# https://github.com/Shivshreyas/i3wm-nord-dotfiles/blob/main/i3-nord(%20withi3bar)/i3/config
set $base00 #101218
set $base01 #1f222d
set $base02 #252936
set $base03 #5e81ac  
set $base04 #C0C5CE
set $base05 #d1d4e0
set $base06 #C9CCDB
set $base07 #ffffff
set $base08 #ee829f
set $base09 #f99170
set $base0A #ffefcc
set $base0B #a5ffe1
set $base0C #97e0ff
set $base0D #97bbf7
set $base0E #c0b7f9
set $base0F #fcc09e

# class                 border  backgr. text    indicator
client.focused          #81a1c1 #81a1c1 #ffffff #81a1c1
client.unfocused        #2e3440 #2e3440 #888888 #2e3440
client.focused_inactive #2e3440 #2e3440 #888888 #2e3440
client.placeholder      #2e3440 #2e3440 #888888 #2e3440
client.urgent           #900000 #900000 #ffffff #900000
client.background       #242424

bar {
        height 25
        position top 
        font pango: Source Code Pro Black, DejaVu Sans Mono 10
        status_command i3status

        tray_padding 1
        strip_workspace_numbers yes
        bindsym button4 nop
        bindsym button5 nop

        colors
        {
                separator $base01
                background $base01
                statusline #81a1c1

                # borderbackground text
                focused_workspace$base01 $base01#81a1c1 
                active_workspace $base01 $base02$base03
                inactive_workspace $base01 $base01#4c566a
                urgent_workspace $base01 $base01$base08
                binding_mode $base01 #81a1c1#2e3440
        }
}
