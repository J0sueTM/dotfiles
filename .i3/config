# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

font pango:monospace 8
font pango:DejaVu Sans Mono 8

# start polybar
exec_always --no-startup-id polybar example

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec_always --no-startup-id picom --config ~/.config/picom/picom.conf

# volume preferences
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym $mod+Ctrl+m exect alsamixer

# floating
floating_modifier $mod
bindsym $mod+Shift+space floating toggle

# terminal
bindsym $mod+Return exec gnome-terminal

# kill focused window
bindsym $mod+Shift+quotedbl kill

# rofi
bindsym $mod+Shift+r exec --no-startup-id rofi -show drun

# change focus
bindsym $mod+h focus left
bindsym $mod+Left focus left

bindsym $mod+s focus right
bindsym $mod+Right focus right

bindsym $mod+t focus down
bindsym $mod+Down focus down

bindsym $mod+n focus up
bindsym $mod+Up focus up

bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+c focus child

# move focused window
bindsym $mod+Ctrl+h move left
bindsym $mod+Ctrl+Left move left

bindsym $mod+Ctrl+t move down
bindsym $mod+Ctrl+Down move down

bindsym $mod+Ctrl+n move up
bindsym $mod+Ctrl+Up move up

bindsym $mod+Ctrl+s move right
bindsym $mod+Ctrl+Right move right

# split horientation
bindsym $mod+Shift+h split h
bindsym $mod+Shift+v split v

# fullscreen
bindsym $mod+f fullscreen toggle

# layout
bindsym $mod+o layout stacking
bindsym $mod+comma layout tabbed
bindsym $mod+period layout toggle split

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload/restart/exit
bindsym $mod+Shift+j reload
bindsym $mod+Shift+p restart
bindsym $mod+Shift+period exec "i3-nagbar -t warning -m 'Exit?' -B 'Yes, exit i3' 'i3-msg exit'"

# resize
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt

        bindsym t resize grow height 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt

        bindsym n resize shrink height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt

        bindsym s resize grow width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# change keyboard layout
mode "keyboard layout" {
    bindsym p exec --no-startup-id setxkbmap br dvorak 

    bindsym e exec --no-startup-id setxkbmap dvorak

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+l mode "keyboard layout"

# theme
client.focused          #556064 #556064 #80FFF9 #FDF6E3
client.focused_inactive #2F3D44 #2F3D44 #1ABC9C #454948
client.unfocused        #2F3D44 #2F3D44 #1ABC9C #454948
client.urgent           #CB4B16 #FDF6E3 #1ABC9C #268BD2
client.placeholder      #000000 #0c0c0c #ffffff #000000 

client.background       #2B2C2B

# i3-gaps
gaps inner 4
gaps outer 4

# specific windows
for_window [class="terminal"] floating enable
no_focus [class="pop-up"]

# remove titlebar
for_window [class="^.*"] border pixel 2

# wallpaper
exec_always nitrogen --set-auto ~/Pictures/24.jpg

# screenshot
bindsym --release $mod+Print exec --no-startup-id import ~/Pictures/latest-print.png

# touchpad
exec_always --no-startup-id xinput set-prop 12 308 1

# keyboard
bindsym $mod+Shift+d exec --no-startup-id setxkbmap dvorak
bindsym $mod+Shift+b exec --no-startup-id setxkbmap br dvorak

# brightness
bindsym XF86MonBrightnessUp exec xrandr --output eDP-1 --brightness 0.8
bindsym XF86MonBrightnessDown exec xrandr --output eDP-1 --brightness 0.4
